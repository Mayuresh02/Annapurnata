<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1D4E0"
    tools:context=".Activity.HomeActivity">

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/signinbuttons"
        android:padding="15dp"
        android:text="Logout"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:id="@+id/donate"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#2E8BC0"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" >

        <ImageView
            android:id="@+id/donateimg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/donate"
            tools:ignore="ContentDescription"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Donate"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginStart="38dp"
            android:layout_marginTop="90dp"
            tools:ignore="HardcodedText,SpUsage" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/receive"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#2E8BC0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toEndOf="@+id/donate"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlHardcoded" >

        <ImageView
            android:id="@+id/receiveimg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/receiving"
            tools:ignore="ContentDescription"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Receive"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginStart="35dp"
            android:layout_marginTop="90dp"
            tools:ignore="HardcodedText,SpUsage" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/drivers"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#2E8BC0"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donate">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_transfer_within_a_station_24" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="90dp"
            android:text="Drivers"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/aboutus"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:cardBackgroundColor="#2E8BC0"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/drivers"
        app:layout_constraintTop_toBottomOf="@+id/receive" >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/about"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>